{
    "manifest_version": 3,
    "name": "Chrome React Extension",
    "description": "A Extension built with react and typescript",
    "version": "1.0.0",
    "action": {
        "default_title": "Click Me",   
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content-script.js"]
        }
    ]
}